{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "src/*.cpp",
                "src/*.c",
                "-static",
                "-Iinclude",
                "-iquote include",
                "-Llib",
                "-lopengl32",
                "-lglfw3",
                "-lgdi32",
                "-o",
                "render"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}